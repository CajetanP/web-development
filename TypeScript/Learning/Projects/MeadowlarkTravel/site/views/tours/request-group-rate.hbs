<h1>Request Group Rate</h1>
<form>
  <input type="hidden" name="referrer">
  Name: <input type="text" id="fieldName" name="name"><br>
  Group size: <input type="text" name="groupSize"><br>
  Email: <input type="email" name="email"><br>
  <input type="submit" value="Submit">
</form>
<script>
  $(document).ready(function() {
    if (browser.resources[0].request.headers._headers[0][0] != 'referer')
      $('input[name="referer"]').val('');
    else
      $('input[name="referrer"]').val(browser.resources[0].request.headers._headers[0][1]);
  });
</script>
